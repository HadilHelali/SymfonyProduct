{# Le template de base qui va etre le parent de tous les autres templates #}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/minty/bootstrap.min.css">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    {% endblock %}

    <title>
        {% block title %} {# On définie les blocs qui vont subir un changement #}
            Document
        {% endblock %} {# Hériter du parent + change #}
    </title>
</head>
<body>
<br/>
<div class="container" style="align-self: center; width: 1300px">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        {% block Home %}
                            <a class="nav-link active" href="{{ path('product') }}"><i class="fas fa-home"></i>  Home </a>
                        {% endblock %}
                    </li>
                    <li class="nav-item">
                        {% block AddProduct %}
                        <a class="nav-link" href="#">Add Product</a>
                        {% endblock %}
                    </li>
                </ul>
                <form class="d-flex" style="margin-left: 300px;">
                    <input class="form-control me-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
</div>
<br/>
{% block body %}
{% endblock %}

</body>
</html>